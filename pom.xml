  <profiles>
    <profile>
      <id>test-debug</id>
      <build>
        <testResources>
          <testResource>
            <directory>${user.home}${file.separator}git${file.separator}beigesoft-orm${file.separator}src${file.separator}main${file.separator}resources</directory>
          </testResource>
          <testResource>
            <directory>${user.home}${file.separator}git${file.separator}beigesoft-orm${file.separator}src${file.separator}test${file.separator}resources</directory>
          </testResource>
        </testResources>
        <plugins>
          <plugin>
            <groupId>com.simpligility.maven.plugins</groupId>
            <artifactId>android-maven-plugin</artifactId>
            <version>4.5.0</version>
            <configuration>
              <test>
                <skip>false</skip>
                <debug>true</debug>
              </test>
              <sdk>
                <platform>28</platform>
              </sdk>
              <undeployBeforeDeploy>true</undeployBeforeDeploy>
              <extractDuplicates>true</extractDuplicates>
            </configuration>
            <extensions>true</extensions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

